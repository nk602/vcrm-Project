<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content modal-content-demo">
    <div class="modal-header">
      <h6 class="modal-title">Edit Master values</h6>
      <button
        aria-label="Close"
        class="btn-close"
        data-bs-dismiss="modal"
        type="button"
      ></button>
    </div>
    <form
      method="POST"
      action="update-master-values"
      enctype="multipart/form-data"
    >
      <div class="modal-body">
        <div class="row">
          <div>
            <input
              type="hidden"
              class="form-control"
              name="masterid"
              value="<%= mastersValues ? mastersValues.id : '' %>"
            />
          </div>
          <div class="col-sm-4 form-group">
            <label class="form-label">Master Name</label>
            <select class="form-control" name="master_values_id" id="master_values_id" required>
              <option value="">Select</option>
              <% masters.forEach(function(master) { %>
                <option value="<%= master.id %>"<%=mastersValues.masterId==master.id ?'selected':''%> ><%= master.name %></option>
               <% }); %>
            </select>
          </div>
          <div class="col-sm-4 form-group">
            <label class="form-label">Master Value</label>
            <input
              class="form-control"
              type="text"
              name="master_name"
              id="name"
              value="<%= mastersValues ? mastersValues.name : '' %>"
              required
            />
          </div>
          <div class="col-sm-4 form-group">
            <label class="form-label">Icon</label>
            <input
              type="file"
              class="form-control"
              name="icon"
              id="icon"
              value="<%=mastersValues.icon%>"
            />
          </div>
       
          <div class="col-lg-2">
            <button type="submit" class="btn ripple btn-primary w-100">
              Submit
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
